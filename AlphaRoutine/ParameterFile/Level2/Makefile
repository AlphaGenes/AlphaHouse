
#pack=$(basename $(pwd))
pack=ParameterFileModL2
msg="!!! Autogenerated file - do not edit !!!"

$(pack): *.f90
	rm -f $(pack).f90;
	cat $(echo $(msg)) $(pack)Start *.f90 $(pack)End > $(pack).f90

clean: # Cleanup in current folder and in $(bin)
	rm -f $(pack).f90

help: # Help
	@echo '\nTarget: Dependency # Description'; \
	echo '=================================================='; \
	egrep '^[[:alnum:].+_()%]*:' Makefile
